## Working WebDAV configuration ##

server {
	listen 80;
	listen [::]:80 ipv6only=on;

	access_log off;
	return 302 https://$http_host$request_uri;
}

server {
	listen 443 ssl;
	listen [::]:443 ipv6only=on ssl;
	server_name dev.robotkeys.com;

	access_log /var/log/nginx/access.log;
	root /home/ubuntu/secure_html;

    ssl_certificate /etc/letsencrypt/live/dev.robotkeys.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/dev.robotkeys.com/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

	location / {
		auth_basic "Restricted";
		auth_basic_user_file "/etc/nginx/htpasswd";

		dav_methods PUT DELETE MOVE COPY;
		dav_access group:rw all:r;
	}

}
